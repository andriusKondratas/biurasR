<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<converter>
		<converter-for-class>lt.atea.izdis.persistance.enums.PersonState</converter-for-class>
		<converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>
	<converter>
		<converter-for-class>lt.atea.izdis.persistance.model.classification.Activity</converter-for-class>
		<converter-class>lt.atea.izdis.pageflow.classification.converters.ActivityConverter</converter-class>
	</converter>
	<converter>
		<converter-for-class>lt.atea.izdis.persistance.model.classification.Region</converter-for-class>
		<converter-class>lt.atea.izdis.pageflow.classification.converters.RegionConverter</converter-class>
	</converter>
	<converter>
		<converter-for-class>lt.atea.izdis.persistance.model.administration.Role</converter-for-class>
		<converter-class>lt.atea.izdis.pageflow.administration.converters.RoleConverter</converter-class>
	</converter>
	<converter>
		<converter-for-class>lt.atea.izdis.persistance.model.core.Convertable</converter-for-class>
		<converter-class>lt.atea.izdis.pageflow.common.converters.GenericConvertableConverter</converter-class>
	</converter>
	<!-- JSF and Spring are integrated -->
	<!-- Enable Spring -->
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>lt</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>lt.atea.izdis.config.CustomResourceBundle</base-name>
			<var>msg</var>
		</resource-bundle>
		<message-bundle>ValidationMessages
		</message-bundle>
		<action-listener>org.primefaces.application.DialogActionListener
		</action-listener>
		<navigation-handler>org.primefaces.application.DialogNavigationHandler
		</navigation-handler>
		<view-handler>org.primefaces.application.DialogViewHandler
		</view-handler>
		<system-event-listener>
			<system-event-listener-class>lt.atea.izdis.config.PreRenderComponentListener
			</system-event-listener-class>
			<system-event-class>javax.faces.event.PreRenderComponentEvent
			</system-event-class>
			<source-class>org.primefaces.component.inputtext.InputText</source-class>
		</system-event-listener>
		<system-event-listener>
			<system-event-listener-class>lt.atea.izdis.config.PreRenderComponentListener
			</system-event-listener-class>
			<system-event-class>javax.faces.event.PreRenderComponentEvent
			</system-event-class>
			<source-class>org.primefaces.component.selectonemenu.SelectOneMenu</source-class>
		</system-event-listener>
		<system-event-listener>
			<system-event-listener-class>lt.atea.izdis.config.PreRenderComponentListener
			</system-event-listener-class>
			<system-event-class>javax.faces.event.PreRenderComponentEvent
			</system-event-class>
			<source-class>org.primefaces.component.password.Password</source-class>
		</system-event-listener>
		<system-event-listener>
			<system-event-listener-class>lt.atea.izdis.config.PreRenderComponentListener
			</system-event-listener-class>
			<system-event-class>javax.faces.event.PreRenderComponentEvent
			</system-event-class>
			<source-class>org.primefaces.component.inputtextarea.InputTextarea</source-class>
		</system-event-listener>
	</application>
</faces-config>